{
    "name": "element-book",
    "version": "0.0.0",
    "homepage": "https://github.com/electrovir/element-book",
    "bugs": {
        "url": "https://github.com/electrovir/element-book/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/element-book"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "compile": "rm -rf packages/*/node_modules/@element-book && rm -rf node_modules/@element-book && npm i && rm -rf packages/*/dist && rm -f packages/*/tsconfig.tsbuildinfo && tsc --build tsconfig.build.json && npm run compile --workspaces",
        "docs:update": "virmator code-in-markdown",
        "format": "virmator format",
        "publish": "virmator publish \"npm run compile && npm run test:all\"",
        "test": "tsc --build tsconfig.build.json && npm run test --workspaces -s",
        "test:all": "npm run compile && npm run test:spelling && npm run test:format && npm run test:docs && npm run test:coverage",
        "test:coverage": "npm run test:coverage --workspaces",
        "test:docs": "virmator code-in-markdown check",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "tsc --build tsconfig.build.json"
    },
    "devDependencies": {
        "cspell": "^6.18.1",
        "markdown-code-example-inserter": "^0.1.13",
        "prettier": "^2.8.3",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^1.1.3",
        "prettier-plugin-organize-imports": "^3.2.2",
        "prettier-plugin-packagejson": "^2.3.0",
        "prettier-plugin-sort-json": "^1.0.0",
        "prettier-plugin-toml": "^0.3.1",
        "virmator": "^5.4.0"
    }
}
